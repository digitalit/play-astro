---
import Breadcrumb from '../components/layout/Breadcrumb.astro';
import Counter from '../components/Counter.vue';
import Layout from '../layouts/Layout.astro';
---

<Layout
  description="Play Astro is a free and open-source Astro template, built for SaaS, startup, business and software website. Play crafted in a way that you can use with almost all sort of web project."
  title="Lab | Play Astro"
>
  <Breadcrumb>
    <Fragment slot="title">Lab</Fragment>
  </Breadcrumb>

  <!-- ====== Lab Section Start -->
  <section class="bg-white py-20 dark:bg-dark-2 lg:py-[110px]">
    <div class="container">
      <div class="-mx-4 flex flex-wrap items-center">
        <div class="w-full px-4 md:w-5/12 lg:w-6/12">
          <Counter client:visible>
            <h1>Hello, Vue!</h1>
          </Counter>
        </div>
        <div class="w-full px-4 md:w-7/12 lg:w-6/12 xl:w-5/12">
          <div>
            <h3 class="mb-5 text-2xl font-semibold text-dark dark:text-white">We Can't Seem.</h3>
            <p class="mb-8 text-base text-body-color dark:text-dark-6">
              Oops! The page you are looking for does not exist. It might have been moved or
              deleted.
            </p>
            <a
              href="javascript:void(0)"
              class="rounded-md bg-dark px-7 py-3 text-base font-medium text-white transition hover:bg-primary"
            >
              Go To Home
            </a>
          </div>
        </div>
      </div>
    </div>
  </section>
  <!-- ====== Lab Section End -->
  <br />
